<div class="header col-md-12">
    <div class="form-group">
        <div class="form-group">
            <input type="text" class="name form-control" placeHolder="name" value="{{name}}"/>
        </div>
        <div class="form-group">
            <input type="text" class="value form-control" placeHolder="value" value="{{value}}"/>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-link delete-header-action"><span class="glyphicon glyphicon-remove"></span></button>
        </div>
        <span class="help-block" style="display:none;"></span>
    </div>
</div>